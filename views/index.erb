<title>Cookbook</title>

<ul>
  <% @recipes.each_with_index do |recipe, index| %>
    <li>
      <% recipe.done? ? x = "X" : x = " "  %>
      <%= "#{index + 1}. [#{x}] #{recipe.name} - #{recipe.description} (#{recipe.prep_time})" %>
      <br>
      <a class="edit" href=<%="/edit/#{index}"%>>Edit Recipe</a> | <a class="delete" href=<%="/delete/#{index}"%>>Delete</a>
    </li>
  <% end %>
</ul>

<a class="new" href="/new">Add Recipe</a>